{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11",
  "features": {
    "ghcr.io/devcontainers-contrib/features/poetry:1": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:1": {},
    "ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {},
    "ghcr.io/rocker-org/devcontainer-features/miniforge:1": {}
  },
  "remoteEnv": {
    "PYTHONDONTWRITEBYTECODE": "true"
  },
  "onCreateCommand": "mamba init && mamba env create -f environment.yml && mamba run -n psychoanalyze poetry install && pipx install sqlfmt",
  "postCreateCommand": "",
  "postStartCommand": "pre-commit install",
  "customizations": {
    "vscode": {
      "settings": {
        "files.associations": {
          "*.psyexp": "xml",
          "*.sql": "jinja-sql"
        },
        "python.condaPath": "/opt/conda/envs/psychoanalyze/bin/python",
        "editor.defaultFormatter": "ms-python.black-formatter"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "bungcip.better-toml",
        "innoverio.vscode-dbt-power-user",
        "GitHub.copilot",
        "charliermarsh.ruff"
      ]
    }
  }
}
