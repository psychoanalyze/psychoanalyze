{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-contrib/features/poetry:1": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:1": {},
    "ghcr.io/devcontainers-contrib/features/heroku-cli:1": {},
    "ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {},
    "ghcr.io/rocker-org/devcontainer-features/miniforge:1": {}
  },
  "remoteEnv": {
    "PYTHONDONTWRITEBYTECODE": "true"
  },
  "onCreateCommand": "mamba init",
  // "postCreateCommand": "mamba env create -f environment.yml && mamba run -n pa_venv poetry install && pre-commit install",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/pa_venv/bin/python",
        "python.condaPath": "/opt/conda/envs/pa_venv/bin/python",
        "files.associations": {
          "*.psyexp": "xml",
          "*.sql": "jinja-sql"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "bungcip.better-toml",
        "innoverio.vscode-dbt-power-user",
        "GitHub.copilot",
        "charliermarsh.ruff"
      ]
    }
  }
}
